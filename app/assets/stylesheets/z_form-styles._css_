/* CSS Document */
/* coopted from older rodan file */

input.submit{font-size: 15px; font-weight: bold; padding: 5px; border-radius: 5px;}

input.user
{   
    border: 1px solid #122;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
    padding: 5px;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 15px;
	font-weight: normal;
    color: #111;
	background: #DDD;
}

select.users
{   
    border: 1px solid #122;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
    padding: 5px;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 15px;
	font-weight: normal;
    color: #111;
	background: #DDD;
	width: 290px;
}

select.user option
{
	padding: 5px;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 15px;
	font-weight: normal;
    color: #111;
	background: #DDD;
} 

input.user:focus{border: 1px solid #123;}

textarea#textuser
{   
   	border: 1px solid #122;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
    padding: 5px;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 15px;
	font-weight: normal;
    color: #111;
	background-color: #DDD;
}

textarea#textuser:focus{border: 1px solid #123;}

input.error, textarea.error
{
	border: 2px solid #D00;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	padding: 5px;
	background-color: #AAA;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 14px;
	font-weight: normal;
    color: #FFF;
}

.container 
{
	margin-right: 0;
	margin-left: 0;
}

.label
{
	padding-bottom: 3px; 
	color: #F63; 
	text-transform: uppercase; 
	text-shadow: 1px 1px 1px #000;
	background-color: transparent;
}

.p
{
	margin: 0 0 0px;
}

.labelerror{color: #F00; padding-bottom: 2px;}
.inputs{padding: 3px 0px 13px 2px; margin-bottom: 7px;}
.errors{color: #F00;}

/* ======== INDEX FORM CONTAINER ============ */
#index-forms{width: 960px; margin: 0px auto 25px;}
.form-field{width: 300px; margin: 0px 10px; float: left;}
.form-field-right{width: 300px; margin-left: 10px; float: left;}