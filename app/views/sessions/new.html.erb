<% provide(:title, "Sign In") %>
<% provide(:visfire, "true") %>

<style>
h1.title {
	margin-top: 20px;
	padding-bottom: 1px;
	border-bottom: solid 1px #acacac;
}

#seller-mid-part {
	margin: 20px 4%;
	display: table;
	width: 92%;
}

#user-account, #new-user {
	display: table-cell;
	width: 45%;
	vertical-align: middle;
}

#new-user {
	text-align: center;
}

#big-or {
	display: table-cell;
	width: 10%;
	text-align: center;
	vertical-align: middle;
	color: #acacac;
	font-size: 16px;
	font-weight: bold;
	position: relative;
}
#big-or .or {
	position: relative;
}
#big-or span {
	position: absolute;
	background-color: #acacac;
	width: 1px;
}
#big-or .line1 {
	top: 0px;
	height: 40%;
}
#big-or .line2 {
	bottom: 0px;
	height: 43%;
}

.form-field {
	margin: 10px 0;
}

.forget-password {
	color: #F05A29;
	margin-left: 10px;
}

.register-btn {
	width: 100px;
}

@media screen and (max-width: 767px) {
	
}
</style>


<div class="container-outer">
  <div class="container-inner">
    <h1 class="title orange">SIGN IN OR SIGN UP</h1>
    <div id="seller-mid-part">
    
      <div id="user-account">
      	<h2>Sign in</h2>
        <div id="login-form-box">
          <%= form_for(:session, url: sessions_path) do |f| %>
            <div class="form-field">
              <label>Email or User ID</label>
              <%= f.text_field :email %>
            </div>
            <div class="form-field">
              <label>Password</label>
              <%= f.password_field :password %>
            </div>
            <div class="form-field">
              <%= f.submit "SIGN IN", :class => "btn" %>
              <!--<%= link_to "Forgot your password?", new_password_reset_path, :class => "forget-password" %>-->
            </div>
          <% end %>
        </div>
      </div>

      <div id="big-or">
      	<span class="line1"></span>
        <div class="or">OR</div>
        <span class="line2"></span>
      </div>
      
      <div id="new-user">
        <h2>New to Treadhunter?</h2>
        <%= link_to "REGISTER", signup_path, :class => "btn register-btn" %>
        <!--<%= link_to "I'M SELLING TIRES", "/tireseller_registration", 
                  :class => "btn new-login-bt" %>-->
      </div>
    </div>
  </div>
</div>
