<% c = 'cars' if c.nil? %>
<select class="<%= c %>" 
        id="auto_options" 
        name="option_id" >
  <option value="">Option</option>
  <% @options.each do |o| %>
  	<% if o.id == session[:option_id] %>
    	<option selected="selected" value="<%= o.id %>"><%= o.name %></option>
  	<% else %>
    	<option value="<%= o.id %>"><%= o.name %></option>
    <% end %>
  <% end %>
</select>