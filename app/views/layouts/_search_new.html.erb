<%= javascript_include_tag "prototype" %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <div class="hero-unit"> 

    <%= form_for @tire_search,
        :url => { :action => "tireresults", 
                  :controller => "tire_searches"}, 
                  :method => :post do |f| %>

      <div class="row-fluid">
        <div class="span12">
          <h3>First, enter your location:</h3><br />
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
            <div class="span6">
              <%= f.label nil, "Enter a city and state or zipcode (Atlanta, GA or 30357)" %>
            </div>
            <div class="span2">
              <%= f.label "Radius" %>
            </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
            <div class="span6">
              <%= f.text_field :locationstr, :style=>'width: 400px;', :value => session[:location] %>
            </div>
            <div class="span2">
              <%= f.select(:radius, TireSearch::RADIUS_CHOICES, {:selected => session[:radius]}, 
                      {:style => 'width: 75px;'}) %> miles
            </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <h3>Next, select your car</h3><br />
        <div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div id="manufacturers"><%= render :partial => 'layouts/manufacturers', 
                                        :object => @auto_manufacturers, 
                                        :locals => {:f => f} %></div>
        <div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div id="models"       ><%= render :partial => 'layouts/models',
                                        :object => @models,
                                        :locals => {:f => f} %></div>
        <div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div id="years"        ><%= render :partial => 'layouts/years',
                                        :object => @years, 
                                        :locals => {:f => f} %></div>
        <div>
      </div>
      <div class="row-fluid">
        <div class="span10">
          <div id="options"      ><%= render :partial => 'layouts/options',
                                        :object => @options,
                                        :locals => {:f => f} %></div>
        <div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <%= f.button "Find my tires!", :class => "btn btn-large btn-success", :name => "auto_search" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <br /><h3><font color="red">-Or-</font> select your tire size</h3><br />

          <div class="row-fluid">
            <div class="span3">
              <div id="diameters">
                <%= render :partial => 'layouts/diameters',     
                           :object => @diameters,      
                           :locals => {:f => f} %>
              </div>
            </div>
            <div class="span3">
              <div id="ratios"> 
                <%= render :partial => 'layouts/ratios',         
                           :object => @ratios,         
                           :locals => {:f => f} %>
              </div>
            </div>
            <div class="span3">
              <div id="wheeldiameters">
                <%= render :partial => 'layouts/wheeldiameters', 
                           :object => @wheeldiameters, 
                           :locals => {:f => f} %>
              </div>
            </div>
          </div>
      </div>

      <%= f.button "Find my tires!", :class => "btn btn-large btn-success", :name => "size_search" %>
    <% end %>
  </div>