<!DOCTYPE html>
<html>
  <head>
    <meta name="robots" content="noindex">
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag "bootstrap", media: "all" %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "primary4.css", :media => 'screen' %>
    <%= stylesheet_link_tag "nav-styles4.css", :media => 'screen' %>
    <%= stylesheet_link_tag "form-styles3.css", :media => 'screen' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body class="body">
    <%= render 'layouts/header_simple' %>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <br><%= value %></br>
      </div>
    <% end %>

    <div id="content-container">
      <div id="content-searches">
        <%= yield %>
      </div>
    </div>

    <%= render 'layouts/footer_simple' %>

  </body>
</html>