<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %> 
    <div>
      <%= yield %>
    </div>
  </body>
</html>